<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane cache="true" styleClass="card-event" stylesheets="@../../../../css/card-event.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs211.project.componentControllers.CardEventController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Separator opacity="0.0" prefHeight="5.0" />
            <HBox alignment="CENTER">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="8.0" />
                  <ImageView fx:id="eventImage" fitHeight="260.0" fitWidth="210.0" pickOnBounds="true">
                     <viewport>
                        <Rectangle2D height="260.0" width="210.0" />
                     </viewport>
                  </ImageView>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="8.0" />
               </children>
            </HBox>
            <Separator opacity="0.0" prefHeight="5.0" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="15.0" />
                  <Label fx:id="eventNameLabel" prefHeight="27.0" prefWidth="200.0" text="event name" textOverrun="WORD_ELLIPSIS">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Separator opacity="0.0" prefHeight="5.0" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="15.0" />
                  <ImageView fx:id="userImg" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <viewport>
                        <Rectangle2D height="30.0" width="30.0" />
                     </viewport>
                  </ImageView>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="10.0" />
                  <VBox>
                     <children>
                        <Label fx:id="hostUsernameLabel" prefHeight="20.0" prefWidth="175.0" text="\@mingmmie" />
                        <Label fx:id="hostNameLabel" prefHeight="20.0" prefWidth="175.0" text="PINKPPANTHER" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Separator opacity="0.0" prefHeight="5.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
