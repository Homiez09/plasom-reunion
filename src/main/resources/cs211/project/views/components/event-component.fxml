               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ImageView>
            <Label fx:id="enddateLabel" styleClass="font-component-subhead" text="enddateLabel">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="370.0" layoutY="60.0">
         <children>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../images/eventcomponent/user.png" />
               </image>
            </ImageView>
            <Label fx:id="memberLabel" styleClass="font-component-subhead" text="memberLabel">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="370.0" layoutY="90.0">
         <children>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../images/eventcomponent/tag.png" />
               </image>
            </ImageView>
            <Label fx:id="tagLabel" styleClass="font-component-subhead" text="tagLabel">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="895.0" layoutY="46.0" prefHeight="50.0">
         <children>
            <Button fx:id="staffButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onStaffAction" prefHeight="38.0" prefWidth="60.0" style="-fx-background-color: FFF95E;" styleClass="button-component" text="Staff">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onEditAction" prefHeight="38.0" prefWidth="61.0" style="-fx-background-color: DB73FF;" styleClass="button-component" text="Edit">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="663.0" layoutY="46.0" prefHeight="50.0">
         <children>
            <Button fx:id="viewjoinButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onJoinViewAction" prefHeight="38.0" prefWidth="61.0" style="-fx-background-color: #51D946;" styleClass="button-component" text="button" />
