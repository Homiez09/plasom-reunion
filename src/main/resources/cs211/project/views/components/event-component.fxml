               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets bottom="5.0" top="5.0" />
   </opaqueInsets>
   <effect>
      <Blend />
   </effect>
</AnchorPane>
