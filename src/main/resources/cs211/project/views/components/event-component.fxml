                  <Image url="@../../../../images/logo/logo_orange.png" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
            </ImageView>
         </children>
      </VBox>
      <Label fx:id="eventnameLabel" layoutX="180.0" layoutY="10.0" styleClass="font-component-head" text="eventnameLabel">
